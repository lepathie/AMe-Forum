{
  "extends": "tslint:recommended",
  "rulesDirectory": ["codelyzer"],
  "rules": {
    "no-unnecessary-class": false,
    "component-class-suffix": true,
    "component-selector": [true, "element", "", "kebab-case"],
    "contextual-decorator": true,
    "contextual-life-cycle": true,
    "directive-class-suffix": true,
    "directive-selector": [true, "attribute", "", "camelCase"],
    "import-destructuring-spacing": true,
    "no-attribute-decorator": true,
    "no-conflicting-life-cycle": true,
    "no-floating-promises": false,
    "no-host-metadata-property": true,
    "no-input-rename": true,
    "no-inputs-metadata-property": true,
    "no-life-cycle-call": true,
    "no-output-native": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-outputs-metadata-property": true,
    "no-queries-metadata-property": true,
    "no-unused-css": true,
    "prefer-inline-decorator": true,
    "prefer-on-push-component-change-detection": true,
    "prefer-output-readonly": true,
    "relative-url-prefix": true,
    "template-banana-in-box": true,
    "template-no-call-expression": true,
    "template-no-any": true,
    "template-no-negated-async": true,
    "template-use-track-by-function": true,
    "use-component-selector": true,
    "use-component-view-encapsulation": true,
    "use-life-cycle-interface": true,
    "use-pipe-decorator": true,
    "use-pipe-transform-interface": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock",
      "check-postbrace"
    ],
    "align": [
      true,
      "arguments",
      "elements",
      "members",
      "parameters",
      "statements"
    ],
    "indent": [true, "spaces", 4],
    "jsdoc-format": [true, "check-multiline-start"],
    "linebreak-style": [true, "CRLF"],
    "no-consecutive-blank-lines": true,
    "no-irregular-whitespace": true,
    "no-trailing-whitespace": true,
    "semicolon": [true, "never"],
    "trailing-comma": [true, { "multiline": "never", "singleline": "never" }],
    "arrow-return-shorthand": true,
    "static-this": true,
    "prefer-conditional-expression": [true, "check-else-if"],
    "experimentalDecorators": false,
    "eofline": true
  }
}
